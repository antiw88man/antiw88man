print("Система расчета штрафов")

car_speed = int(input("Введите скорость вашего автомобиля: ")) #Пользователь может сам ввести скорость авто
is_town = True
is_camera = True #Превышение заметила камера или не она(сотрудник)

fine_for_20_to_40 = "Получите штраф: 500 рублей"
fine_for_40_to_60 = "Получите штраф: 1000 рублей"
fine_for_60_to_80 = "Получите штраф: 2000 рублей"
fine_for_80_and_more = "Получите штраф: 5000 рублей"


town_speed = 60 #Допустимая скорость в населенном пункте
country_speed = 90 #Допустимая скорость по всей стране


if is_town:
  over_speed = car_speed - town_speed
else:
  over_speed = car_speed - country_speed

if is_camera == False and over_speed >= 60: #Если превышение больше 60км/ч и водителя остановил
 print("Лишение прав")                      #сотрудник - к штрафу прибавляется лишение прав


if over_speed < 20:
  print("Скорость не превышена или превышена незначительно")
elif over_speed >= 20 and over_speed < 40:
  print(str(fine_for_20_to_40))
elif over_speed >= 40 and over_speed < 60:
  print(str(fine_for_40_to_60))
elif over_speed >= 60 and over_speed < 80:
  print(str(fine_for_60_to_80))
elif over_speed >= 80:
  print(str(fine_for_80_and_more))
